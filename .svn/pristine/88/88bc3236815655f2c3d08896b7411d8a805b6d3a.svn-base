<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jk.db.mapper.DbFeedbackMapper">

    <sql id="Base_Column_List">
        is_pass,is_end,pid,id,db_type,db_id,db_source,db_content_brief,db_ask_finaltime,db_level,lead_department,responsibility_department,lead_department_id,responsibility_department_id,total_time,final_evidence,department_principal,charge_lead,manager_advice,president_advice,inserter,insert_time,updater,update_time,instance_id,create_by,create_time,update_by,update_time,apply_user,apply_time
    </sql>

    <!-- 带参数查询督查督办情况反馈表列表 -->
    <select id="selectPageList" resultType="com.jk.db.entity.DbFeedback">
        select
            <include refid="Base_Column_List"/>
        from db_feedback where 1=1
            <if test="dbType !=null and dbType!=''">
                    and db_type like concat('%',#{dbType},'%')
            </if>
            <if test="dbId !=null and dbId!=''">
                        and db_id = #{dbId}
            </if>

    </select>

    <select id="getUserByRoleAndOrgan" resultType="com.jk.sys.entity.User">
      select  *  from  sys_user  where  1=1 and  organ_id=#{organId} and  id  in  (select user_id  from
      sys_user_role    where  role_id  =(select  id  from sys_role  WHERE  name=#{name}))
    </select>

</mapper>

