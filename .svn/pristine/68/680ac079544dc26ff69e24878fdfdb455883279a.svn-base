    <select id="selectQueueCmd" resultType="com.jk.kq.entity.DeviceCmd">
        select *
        from jk_device_cmd
        where sn = #{sn}
        and status = 0
        order by create_time asc
        limit 10
    </select>

    <insert id="insert" parameterType="com.jk.kq.entity.DeviceCmd">
        insert into jk_device_cmd(sn, status, msg_id, command, result, create_time)
        value (#{sn}, #{status}, #{msgId}, #{command}, #{result}, #{createTime})
    </insert>

